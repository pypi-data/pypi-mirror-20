[Unit]
Description=Kubernetes Proxy Server
After=network.target

[Service]
EnvironmentFile=-/etc/kubernetes/config/config
EnvironmentFile=-/etc/kubernetes/config/kube-proxy
ExecStart=/usr/bin/kube-proxy \
      $KUBE_LOGTOSTDERR \
      $KUBE_LOG_LEVEL \
      $KUBE_MASTER \
      $KUBE_PROXY_KUBECONFIG \
      $KUBE_PROXY_MODE \
      $KUBE_PROXY_ARGS
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
