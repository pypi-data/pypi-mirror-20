<FileNameScreen@Screen>
    name: "file_name_screen"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        StackLayout:
            size_hint: 1, None
            height: sum([i.height for i in self.children])

            HorizontalContainer:
                WrappedLabel:
                    text: "How would you like to name your file?"

            HorizontalContainer:
                height: save_as_input.height
                BasicTextInput:
                    id: save_as_input
                    focus: True
                    text: app.save_as
                    on_text: app.save_as = self.text

            Spacer:
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                size_hint: 1, None
                height: file_name_button_container.height

                BoxLayout:
                    id: file_name_button_container
                    orientation: "horizontal"
                    height: randomize_name_button.height
                    size_hint: None, None
                    width: randomize_name_button.width + lock_unlock_button.width + self.spacing
                    spacing: 2

                    BlueBlackButton:
                        id: randomize_name_button
                        text: "Randomize Name"
                        on_release: app.randomize_name()
                    BlueBlackButton:
                        id: lock_unlock_button
                        text: app.lock_or_unlock
                        on_release: app.run_lock_or_unlock()
