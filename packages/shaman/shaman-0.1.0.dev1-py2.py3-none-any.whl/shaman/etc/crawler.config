[GENERAL]
#basepath - root of main directory with modules (change it, if there is a need, to custom dir)
basepath = /usr/local/lib/python2.7/dist-packages/shaman
num_workers = 1
logfile_path = /tmp/shaman_daemon.log
pidfile_path = /var/run

workers_logging_dir = /tmp/
worker_prefix = worker_
stages_dir = src/analyzers/input_stages;src/analyzers/output_stages;src/analyzers/general_stages;src/analyzers/analyzer_stages
custom_stage_dir = src/analyzers/custom_stages

[STAGES]
stdin_reader_stage = 'classname':'StdinReaderStage'
download_stage = 'classname':'DownloadStage'
charsetdetect_stage ='classname':'CharsetDetectStage'
message_printer = 'classname':'MessagePrinterStage'


[stdin_reader_stage]
order = 0
owner = ''
comment = ''


[download_stage]
connect_timeout = 3
download_timeout = 3
order = 10


[charsetdetect_stage]
order = 20


[message_printer]
order = 30
fields_to_print = url,charset