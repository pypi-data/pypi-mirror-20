#!/usr/bin/env python3
#
#

""" Die medicijnen zijn gif en het toedienen ervan is stafbaar !! """

import sys, os
sys.path.insert(0, os.getcwd())

from evrm import __version__, __txt__

from mads.shell import reset, banner

from mids import kernel

def main():
    kernel.parse_cli()
    if kernel.cfg.shell:
        banner("EVRM", __version__, __txt__)
    kernel.main()
    kernel.walk("evrm", True)
    kernel.wait()

if __name__ == "__main__": 
    try:
        main()
    except KeyboardInterrupt:
        pass
    kernel.shutdown()
    reset()
    os._exit(0)
