#!/usr/bin/python3
# -*- coding: UTF-8 -*-
from Jalapeno.GUI import gui
import webbrowser
import multiprocessing,threading
import time

a= 1
print('Here is Jalo')
def gui_run():
	gui.run(port=5588)

def redirect_thread():
	webbrowser.open('http://127.0.0.1:5588/redirect')
	time.sleep(1)
	
def main():
	try:
		gui_proc = multiprocessing.Process(target=gui_run)
		gui_proc.start()
		launcher = threading.Thread(target=redirect_thread)
		launcher.start()
		launcher.join()
		gui_proc.join()
	except:
		launcher.join()
		gui_proc.join()
	
if __name__ =='__main__':
	main()
	