{
    "width": 150,
    "height": 150,
    "data": [
        {
            "name": "scores",
            "values": {{ scores }}
        },
        {
            "name": "highlight",
            "values": {{ highlight }}
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "range": "width",
            "zero": false,
            "domain": {"data": "scores", "field": "data.idx"}
        },
        {
            "name": "y",
            "type": "linear",
            "range": "height",
            "nice": true,
            "domain": {"data": "scores", "field": "data.score"}
        },
        {
            "name": "c",
            "type": "ordinal",
            "domain": {"data": "highlight", "field": "data.target"},
            "range": "category20"
        }
    ],
    "axes": [
        {"type": "x", "scale": "x", "offset": 5, "title": "targets", "ticks": 4},
        {"type": "y", "scale": "y", "nice": true, "offset": 5, "title": "score"}
    ],
    "marks": [
        {
            "type": "line",
            "from": {"data": "scores"},
            "properties": {
                "enter": {
                    "x": {"scale": "x", "field": "data.idx"},
                    "y": {"scale": "y", "field": "data.score"},
                    "stroke": {"value": "steelblue"},
                    "strokeWidth": {"value": 2}
                }
            }
        },
        {
            "type": "symbol",
            "from": {"data": "highlight"},
            "properties": {
                "enter": {
                    "x": {"scale": "x", "field": "data.idx"},
                    "y": {"scale": "y", "field": "data.score"},
                    "fill": {"scale": "c", "field": "data.target"},
                    "stroke": {"value": "transparent"},
                    "size": {"value": 50}
                }
            }
        }
    ],
    "legends": [
        {
            "fill": "c",
            "title": "                  ",
            "properties": {
                "symbols": {
                    "stroke": {"value": "transparent"}
                }
            }
        }
    ]
}
