#!/usr/bin/env python
import click
from markdownreveal import run

# TODO:
#   - option: --warmup
#   - subcommand: template
#   - subcommand: clean
#   - subcommand: zip
#   - subcommand: upload
#       cp -rL $HOME/.markdownreveal/out /tmp
#       touch /tmp/out/.nojekyll
#       git checkout gh-pages
#       git merge master
#       git --work-tree=/tmp/out/ add .
#       git --work-tree=/tmp/out/ commit -m 'Markdwonreveal live presentation'
#       git --work-tree=/tmp/out/ push -u origin gh-pages
#       git --work-tree=/tmp/out/ checkout master
#   - subcommand: pdf (decktape.js)


@click.command()
@click.argument('markdown_file')
def markdownreveal(markdown_file):
    run(markdown_file)


if __name__ == '__main__':
    markdownreveal()
