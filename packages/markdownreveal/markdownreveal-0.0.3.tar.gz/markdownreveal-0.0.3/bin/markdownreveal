#!/usr/bin/env python
import click
from markdownreveal import run

# TODO:
#   - argparse: --template (maybe use click for subcommands?)
#   - argparse: --clean
#   - argparse: --warmup
#   - argparse: --output-here
#   - argparse: --ghpages
#   - argparse: --pdf (decktape.js)


@click.command()
@click.argument('markdown_file')
def markdownreveal(markdown_file):
    run(markdown_file)


if __name__ == '__main__':
    markdownreveal()
